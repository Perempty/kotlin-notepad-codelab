<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="chriscorptechnologies.learning.kotlin.notepad.NoteDetailActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <EditText
        android:id="@+id/detail_note_title_et"
        style="@style/NoteTitleFond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:hint="Titre de la note" />

    <EditText
        android:id="@+id/detail_note_text_et"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/detail_note_title_et"
        android:hint="Texte de la note" />


</RelativeLayout>
